<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style
		name="greenWindowTitleBackground">
		<item
			name="android:background">@color/opaque_green</item>
		<item
			name="android:textColor">@color/opaque_white</item>
	</style>
	<style
		name="tabIndicatorText">
		<item
			name="android:textColor">@color/opaque_white</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:shadowColor">#222</item>
		<item
			name="android:shadowRadius">2</item>
	</style>
	<style
		name="textShadow">
		<item
			name="android:textColor">@color/opaque_white</item>
		<item
			name="android:shadowColor">#444</item>
		<item
			name="android:shadowRadius">2</item>
		<item
			name="android:textStyle">bold</item>
	</style>
	<style
		name="buttonStyle"
		parent="android:Widget.Button">
		<item
			name="android:textColor">@color/opaque_grey</item>
	</style>
</resources>
